<h1> Reviews </h1>

<%= form_tag(reviews_path, method: 'get') do %>
  <label for="sort">Sort By</label>
  <select name="sort">
    <option <%= 'selected' if params[:sort] == '' %> value="">All</option>
    <option <%= 'selected' if params[:sort] == 'my_reviews' %> value="my_reviews">My Reviews</option>
    <option <%= 'selected' if params[:sort] == 'updated_at' %> value="updated_at">All Most Recent</option>
  </select>
  <%= submit_tag 'Sort Results' %>
<% end %>
<br>
<button> <%= link_to 'Add Review', new_review_path %></button>

<% @reviews.each do |review| %>
<p> <%= link_to review.title, review_path(review) %> -<%= review.event.name %></p>
<p> by: <%= review.user.username %> </p>
<% end %>